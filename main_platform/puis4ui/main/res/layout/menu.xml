<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize=R.dimen.buttonTextSize
        android:background=R.color.buttonBackground
        android:text=R.string.menu_buttonOnline
        qinter:id="button_online"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize=R.dimen.buttonTextSize
        android:background=R.color.buttonBackground
        android:text=R.string.menu_buttonOffline
        qinter:id="button_offline"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
